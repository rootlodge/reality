{
  "name": "@rootlodge/reality",
  "version": "1.1.1",
  "description": "Socketless Real-Time Infrastructure - Deterministic pull-based real-time system that replaces WebSockets, SSE, and polling",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./compat": {
      "types": "./dist/compat/index.d.ts",
      "import": "./dist/compat/index.mjs",
      "require": "./dist/compat/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "realtime",
    "real-time",
    "websocket",
    "websocket-alternative",
    "sse",
    "server-sent-events",
    "polling",
    "sync",
    "react",
    "react-native",
    "typescript",
    "mesh",
    "distributed",
    "socketless"
  ],
  "author": "RootLodge / CollabHut",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rootlodge/reality.git"
  },
  "homepage": "https://github.com/rootlodge/reality#readme",
  "bugs": {
    "url": "https://github.com/rootlodge/reality/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "vite": "7.3.1",
    "zod": ">=3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "sideEffects": false
}
